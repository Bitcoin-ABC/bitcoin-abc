{
    "name": "MarlinWallet",
    "version": "1.6.0",
    "private": true,
    "scripts": {
        "android": "pnpm run build-web && pnpm run copy-web-android && react-native run-android",
        "build-android-release-aab": "pnpm run build-web && pnpm run copy-web-android && cd android && ./gradlew bundleRelease",
        "build-android-release-apk": "pnpm run build-web && pnpm run copy-web-android && cd android && ./gradlew assembleRelease",
        "build-ios-release": "pnpm run build-web && pnpm run copy-web-ios && cd ios && xcodebuild -workspace MarlinWallet.xcworkspace -scheme MarlinWallet -configuration Release archive -allowProvisioningUpdates",
        "build-wearos-release-aab": "cd android && ./gradlew :wear:bundleRelease",
        "build-wearos-release-apk": "cd android && ./gradlew :wear:assembleRelease",
        "build-web": "cd web && pnpm run build && cd ..",
        "clean-android": "cd android && ./gradlew clean",
        "copy-web-android": "mkdir -p android/app/src/main/assets/web/ && cp -r web/dist/* android/app/src/main/assets/web/",
        "copy-web-ios": "cp -r web/dist/* ios/MarlinWallet/web/",
        "ios": "pnpm run build-web && pnpm run copy-web-ios && react-native run-ios",
        "wearos": "cd android && ./gradlew :wear:installDebug",
        "watchos": "./scripts/run-watchos.sh"
    },
    "dependencies": {
        "react": "19.2.3",
        "react-native": "^0.83.1",
        "react-native-haptic-feedback": "^2.3.3",
        "react-native-keychain": "^10.0.0",
        "react-native-linear-gradient": "^2.8.3",
        "react-native-safe-area-context": "^5.6.0",
        "react-native-webview": "^13.14.1"
    },
    "devDependencies": {
        "@babel/core": "^7.20.0",
        "@babel/preset-env": "^7.20.0",
        "@babel/runtime": "^7.20.0",
        "@react-native-community/cli": "^20.0.2",
        "@react-native/babel-preset": "^0.83.1",
        "@react-native/codegen": "^0.83.1",
        "@react-native/eslint-config": "^0.83.1",
        "@react-native/gradle-plugin": "^0.83.1",
        "@react-native/metro-config": "^0.83.1",
        "@react-native/typescript-config": "^0.83.1",
        "@types/react": "^19.1.1",
        "@types/react-test-renderer": "^19.0.0",
        "prettier": "^3.7.4",
        "react-test-renderer": "19.2.3",
        "typescript": "^5.9.3"
    },
    "engines": {
        "node": ">=18"
    }
}
