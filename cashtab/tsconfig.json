{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "alwaysStrict": true,
        "skipLibCheck": true,
        "declaration": true,
        "baseUrl": "src",
        "allowJs": true,
        "jsx": "react-jsx"
    },
    "include": [
        "src",
        ".eslintrc.js",
        "babel.config.js",
        "jest.config.js",
        "config",
        "jest.setup.js"
    ]
}
