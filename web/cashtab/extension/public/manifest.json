{
    "manifest_version": 2,

    "name": "Cashtab",
    "description": "A browser-integrated eCash wallet from Bitcoin ABC",
    "version": "1.0.2",
    "content_scripts": [
        {
            "matches": ["file://*/*", "http://*/*", "https://*/*"],
            "js": ["contentscript.js"],
            "run_at": "document_idle",
            "all_frames": true
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "index.html",
        "default_title": "Cashtab"
    },
    "icons": {
        "16": "ecash16.png",
        "48": "ecash48.png",
        "128": "ecash128.png",
        "192": "ecash192.png",
        "512": "ecash512.png"
    }
}
