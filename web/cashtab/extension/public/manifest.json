{
    "manifest_version": 2,

    "name": "Cashtab",
    "description": "A browser-integrated BCHA wallet from Bitcoin ABC",
    "version": "0.0.9",
    "content_scripts": [
        {
            "matches": ["file://*/*", "http://*/*", "https://*/*"],
            "js": ["contentscript.js"],
            "run_at": "document_idle",
            "all_frames": true
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "index.html",
        "default_title": "Cashtab"
    },
    "icons": {
        "16": "bch16.png",
        "48": "bch48.png",
        "128": "bch128.png",
        "192": "bch192.png",
        "512": "bch512.png"
    }
}
