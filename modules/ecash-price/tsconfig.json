{
    "compilerOptions": {
        "target": "es2020",
        "lib": ["ES2020", "DOM"],
        "module": "CommonJS",
        "noEmit": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "strict": true,
        "skipLibCheck": true,
        "types": ["node", "mocha"]
    },
    "include": ["src/**/*", "tests/**/*"]
}
