{
    "compilerOptions": {
        "target": "es2020",
        "lib": ["ES2020"],
        "module": "CommonJS",
        "noEmit": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "tests/**/*"]
}
